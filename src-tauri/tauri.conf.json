{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "",
  "version": "",
  "identifier": "",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "hiddenTitle": true,
        "width": 1400,
        "height": 750,
        "minWidth": 768,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": false,
        "focus": false,
        "visible": false,
        "dragDropEnabled": true,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' webkit-pdfjs-viewer: asset: http://asset.localhost blob: data: filesystem: http: https: tauri:",
        "connect-src": "'self' ipc: http://ipc.localhost ws: wss: http: https: tauri:",
        "img-src": "'self' asset: http://asset.localhost blob: data: filesystem: http: https: tauri:",
        "style-src": "'self' 'unsafe-inline' http: https: tauri:"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$RESOURCE/../**", "**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE4QTk2Nzk3Q0FEQ0I0RTMKUldUanROektsMmVwR0F1ZWE4Y1ozY3E4WEhjbWN2cHFXVnl2dXV3dTBGemFzVFY4WGlqd0s3Wm4K",
      "endpoints": [
        "https://github.com/{}/{}/releases/latest/download/latest.json"
      ]
    }
  }
}
